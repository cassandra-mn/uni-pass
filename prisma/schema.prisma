generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int         @id @default(autoincrement())
  email              String      @unique
  password           String
  name               String
  disciplines        Discipline[]
  disciplinesUsers   DisciplineUser[]

  @@map("users")
}

model Discipline {
  id                 Int         @id @default(autoincrement())
  discipline         String
  teacher            String
  clasroom           String
  color              Colors   
  userId             Int
  user               User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  disciplinesUsers   DisciplineUser[]

  @@unique([discipline, userId])
  @@map("disciplines")
}

enum Colors {
  white
  blue
  //acrescentar cores
}

model DisciplineUser {
  id                Int         @id @default(autoincrement())
  disciplineId      Int
  discipline        Discipline  @relation(fields: [disciplineId], references: [id], onDelete: Cascade)
  userId            Int
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  timetables        Timetable[]
  tasks             Task[]
  tests             Test[]

  @@unique([disciplineId, userId])
  @@map("disciplinesUsers")
}

model Timetable {
  id                Int         @id @default(autoincrement())
  day               Days
  startTime         DateTime
  finalTime         DateTime
  disciplineUserId  Int
  disciplineUser    DisciplineUser  @relation(fields: [disciplineUserId], references: [id])

  @@map("timetables")
}

enum Days {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

model Task {
  id                Int         @id @default(autoincrement())
  task              String
  startDate         DateTime    @default(now())
  finalDate         DateTime  
  disciplineUserId  Int
  disciplineUser    DisciplineUser  @relation(fields: [disciplineUserId], references: [id])

  @@unique([task, disciplineUserId])
  @@map("tasks")
}

model Test {
  id                Int         @id @default(autoincrement())
  test              String  
  date              DateTime
  disciplineUserId  Int
  disciplineUser    DisciplineUser  @relation(fields: [disciplineUserId], references: [id])

  @@unique([test, disciplineUserId])
  @@map("tests")
}